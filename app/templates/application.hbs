<div class="invisible">{{render 'audio'}}</div>
<section class="controls">
  {{se-control isPlaying=audioIsPlaying
               onPlay='onSongPlay'
               onPause='onSongPause'
               onNext='onSongNext'
               onPrev='onSongPrev'}}

  {{se-display isPlaying=audioIsPlaying songInPlayer=songInPlayer}}
</section>

<section class="sidebar">
  <div class="sidebar-navigation-component">
    <h6 class="sidebar-title">YOUR MUSIC</h6>
    <ul class="sidebar-list">
      <li class="sidebar-item">{{link-to 'Albums' 'albums'}}</li>
      <li class="sidebar-item">{{link-to 'Songs' 'songs'}}</li>
      <li class="sidebar-item">{{link-to 'Favorites' 'favorites'}}</li>
    </ul>
  </div>
</section>

<section class="content">
  {{outlet}}
</section>

<section class="status">
  <div class="status-message">Your collection has <strong>{{account.songTotal}}
 songs</strong>, <strong>{{account.albumTotal}} albums</strong>, about <strong>{{account.durationTotal}} seconds</strong> of music</div>
</section>
